// ===== Logs (Docker -> Loki) =====
// Requires mounting /var/run/docker.sock
loki.source.docker "containers" {
  host   = "unix:///var/run/docker.sock"
  labels = { job = "containers" }
  forward_to = [loki.write.default.receiver]
}

loki.write "default" {
  endpoint { url = "http://loki:3100/loki/api/v1/push" }
}
